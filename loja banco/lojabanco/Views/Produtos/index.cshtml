@model List<lojabanco.Models.ProdutoModel>
 
 
 
<!-- Esta diretiva define o 'model' que a view irá receber do Controller -->
<!-- Nesse caso, a view espera uma lista de objetos 'produtoModel' -->
<!-- Isso permite que vocÊ acesse os dados do C# diretamente na View usando a variavel 'Model' -->
<h1>Lista de produtos</h1>
 
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Preço</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var produto in Model ){
     <tr>
      <th scope="row">@produto.Id</th>
      <td>@produto.Nome</td>
      <td>@produto.Preco</td>
      <td>
        <a href='@Url.Action("Detalhes","Produtos", new {id = produto.Id})" class="btn btn-primary btn-sm'>Ver</a>
        <a href="" class="btn btn-primary btn-sm">Editar</a>
        <form action="">
            <input type="text">
            <button class="btn btn-danger btn-sm">Deletar</button>
        </form>
      </td>
    </tr>
 
  }
     
  </tbody>
</table>